<% content_for :page_title, "RideMates" %>
<div class="pageloader"><span class="title"></span></div>
<div class="container">
  <nav class="level">
    <!-- left side -->
    <div class="level-left">
        <p class="level-item">
        <strong><%= link_to "Epic Ride Mate", users_path %> </strong>
        </p>

    </div>
    <div class="level-right">
      <p class="level-item">
        <%= simple_form_for :search, url: users_path, method: "GET" do |f| %>
          <%= f.input :search_username, input_html: {value: "", placeholder: "type a username and press enter", class: 'input'}%>
          <% end %>
      </p>
    </div>
  </nav>
</div>

<hr />

<% @users.each do |user| %>
<div class="box">
  <article class="media">
    <div class="media-left">
      <figure class="image is-128x128">
        <%= image_tag user.picture.url if user.picture? %>
      </figure>
    </div>
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= link_to user.username, user %></strong> <small><%= user.email %></small>
          </p>
          <article class="message">
            <div class="message-body">
              <%= user.bio %>
            </div>
          </article>
      </div>
      <nav class="level is-mobile">
        <div class="level-left">
          <a class="level-item" aria-label="reply">
            <span class="icon is-small">
              <i class="fas fa-reply" aria-hidden="true"></i>
            </span>
          </a>
        </div>
      </nav>
    </div>
  </article>
</div>
<% end %>
